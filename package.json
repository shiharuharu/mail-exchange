{
  "name": "mail-exchange",
  "version": "1.0.0",
  "description": "IMAP mail forwarding tool with web interface",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --compile --outfile dist/mail-exchange",
    "build:linux-x64": "bun build src/index.ts --compile --target=bun-linux-x64 --outfile dist/mail-exchange-linux-x64",
    "build:linux-arm64": "bun build src/index.ts --compile --target=bun-linux-arm64 --outfile dist/mail-exchange-linux-arm64",
    "build:darwin-x64": "bun build src/index.ts --compile --target=bun-darwin-x64 --outfile dist/mail-exchange-darwin-x64",
    "build:darwin-arm64": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile dist/mail-exchange-darwin-arm64",
    "build:windows-x64": "bun build src/index.ts --compile --target=bun-windows-x64 --outfile dist/mail-exchange-windows-x64.exe",
    "build:all": "bun run build:linux-x64 && bun run build:linux-arm64 && bun run build:darwin-x64 && bun run build:darwin-arm64 && bun run build:windows-x64"
  },
  "dependencies": {
    "express": "^4.18.2",
    "imap": "^0.8.19",
    "mailparser": "^3.6.5",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/imap": "^0.8.40",
    "@types/mailparser": "^3.4.4",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  }
}
